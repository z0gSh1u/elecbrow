{
  "name": "elecbrow",
  "version": "1.0.0",
  "description": "Multi-tab browser built with Electron and React",
  "main": "dist/main.js",
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "electron:dev": "wait-on dist/renderer.js && electron .",
    "package": "webpack && electron-builder build"
  },
  "keywords": [
    "electron",
    "browser",
    "tabs",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "20",
    "@types/react": "18",
    "@types/react-dom": "18",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "34",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "react": "18",
    "react-dom": "18",
    "react-icons": "^5.5.0"
  },
  "build": {
    "appId": "com.elecbrow.app",
    "productName": "ElecBrow",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}